{
    "name": "bizboa-bridge-server",
    "version": "1.0.0",
    "description": "Server for BizBOA Bridge",
    "main": "src/main.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "NODE_ENV=test node_modules/.bin/hardhat test",
        "clean": "NODE_ENV=test node_modules/.bin/hardhat clean",
        "build": "NODE_ENV=test node_modules/.bin/hardhat compile",
        "start:dev": "NODE_ENV=development node_modules/.bin/hardhat run src/main.ts",
        "start": "NODE_ENV=production node_modules/.bin/hardhat run src/main.ts",
        "start:swap": "NODE_ENV=production node_modules/.bin/hardhat run src/main.ts",
        "start:scheduler": "NODE_ENV=production node_modules/.bin/hardhat run src/scheduler.ts",
        "tsc": "tsc",
        "lint": "node_modules/.bin/tslint --config tslint.json \"{src,test}/**/*.ts\"",
        "lint-fix": "node_modules/.bin/tslint --fix --config tslint.json \"{src,test}/**/*.ts\"",
        "debug:BridgeServer": "NODE_ENV=test node_modules/.bin/hardhat test test/bridge/BridgeServer.test.ts",
        "debug:BridgeEndpoints": "NODE_ENV=test node_modules/.bin/hardhat test test/bridge/BridgeEndpoints.test.ts",
        "debug:BridgeExpire": "NODE_ENV=test node_modules/.bin/hardhat test test/bridge/BridgeExpire.test.ts",
        "debug:TokenBridge": "NODE_ENV=test node_modules/.bin/hardhat test test/token_bridge/TokenBridge.test.ts",
        "debug:Scheduler": "NODE_ENV=test node_modules/.bin/hardhat test test/service/Scheduler.test.ts",
        "debug:Config": "NODE_ENV=test node_modules/.bin/hardhat test test/service/Config.test.ts",
        "debug:BOA": "NODE_ENV=test node_modules/.bin/hardhat test test/service/BOA.test.ts",
        "debug:CGCCoinPrice": "NODE_ENV=test node_modules/.bin/hardhat test test/coin_price/CGCCoinPrice.test.ts",
        "debug:CMCCoinPrice": "NODE_ENV=test node_modules/.bin/hardhat test test/coin_price/CMCCoinPrice.test.ts",
        "debug:CoinPrice": "NODE_ENV=test node_modules/.bin/hardhat test test/coin_price/CoinPrice.test.ts",
        "debug:GasPrice": "NODE_ENV=test node_modules/.bin/hardhat test test/gas_price/GasPrice.test.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bosagora/bizboa-bridge-server.git"
    },
    "author": "BOSAGORA Foundation",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bosagora/bizboa-bridge-server/issues"
    },
    "homepage": "https://github.com/bosagora/bizboa-bridge-server#readme",
