        "@typechain/ethers-v5": "^7.2.0",
        "@typechain/hardhat": "^2.3.1",
        "@types/argparse": "^2.0.2",
        "@types/chai": "^4.3.0",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.8",
        "@types/extend": "^3.0.1",
        "@types/ip": "^1.1.0",
        "@types/mocha": "^9.1.0",
